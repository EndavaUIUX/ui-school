      <script>
function currentFadeOut($arg) {
    $arg.hide('fast');
}

function nextFadeIn($arg) {
    $arg.next().fadeIn(function () {
        $arg.css({left : 0});
    });
    //$arg.css({left:0});
}

function prevFadeIn($arg) {
    $arg.next().fadeIn(function () {
        $arg.css({left : 0});
    });
}

$(".latest__article, .article-wrapper").on("swipeleft", function () {
    var $this = $(this);
    console.log('left');
    $this.animate({left : '-300px'}, 300, function () {
        if ($this.next().length) {
          console.log($this.next())
            $this.hide();
            $this.next().css({left:0}).fadeIn();
        } else {
            $this.animate({left : 0}, 100);
        }
    });
});

$(".latest__article, .article-wrapper").on("swiperight", function () {
    var $this = $(this);
    console.log('right');
    $this.animate({left : '300px'}, 300, function () {
        if ($this.prev().length) {
          console.log($this.prev())
            $this.hide();
            $this.prev().css({left:0}).fadeIn();
        } else {
            $this.animate({left : 0}, 100);
        }

    });
});
      </script>
