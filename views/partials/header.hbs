<header>
    <div class='menu-hamburger'>
        <div class="menu">
            <img class="menu-icon" src="assets/images/header/menu.png" />
        </div>
    </div>
    <div class='logo-user'>
        <div class='logo'>
            <a href="/">
                <img class="logo-icon" src="assets/images/header/logo1.png" />
            </a>
        </div>
        <div class='user'>
            <div class="user-profile">
                <img class="user-icon" src="assets/images/header/profile.png">
            </div>
        </div>
    </div>
</header>

{{>partials/left_menu}}
{{>partials/right_menu}}

<script>


    //show & hide resources list from right menu
    $(function() {
        $('.left-word').show();

        $('.bordernone').click(function(ev) {
             ev.preventDefault()
            $('.left-word').toggle();
        });

    });  


    // show & hide recent article list from right menu
    $(function() {
        $('.recent-list').show();

        $('.title-recent').click(function() {
            $('.recent-list').toggle();
        });

    });
    

</script>
