<header class='topheader'>
    <div class='leftthird'>
        <div class="menuHamburger">
            <img class="menu" src="assets/images/header/menu.png" />
        </div>
    </div>
    <div class='righttwothirds'>
        <div class='centerdiv'>
            <a href="/">
                <img class="logo" src="assets/images/header/logo1.png" />
            </a>
        </div>
        <div class='rightminidiv'>
            <div class="userProfile">
                <img class="profile" src="assets/images/header/profile.png">
            </div>
        </div>
    </div>
</header>

{{>partials/left_menu}}
{{>partials/right_menu}}

<script>


    //show & hide resources list from right menu
    $(function() {
        $('.left-word').show();

        $('.bordernone').click(function(ev) {
             ev.preventDefault()
            $('.left-word').toggle();
        });

    });  


    // show & hide recent article list from right menu
    $(function() {
        $('.recent-list').show();

        $('.title-recent').click(function() {
            $('.recent-list').toggle();
        });

    });
    

</script>
