<header class='topheader'>
    <div class='leftthird'>
        <label for="menuHamburger">
            <img class="menu" src="assets/images/header/menu.png" />
        </label>
        <input type="checkbox" id="menuHamburger">
    </div>
    <div class='righttwothirds'>
        <div class='centerdiv'>
            <a href="/">
                <img class="logo" src="assets/images/header/logo1.png" />
            </a>
        </div>
        <div class='rightminidiv'>
            <label for="userProfile">
                <img class="profile" src="assets/images/header/profile.png">
            </label>
        </div>
    </div>
</header>

{{>partials/left_menu}}
{{>partials/right_menu}}

<script>
    // show & hide recent article list from right menu
    $(function() {
        $('.recent-list').hide();

        $('.title').click(function() {
            $('.recent-list').toggle();
        });

    });
    

    //show & hide resources list from right menu
    $(function() {
        $('.left-word').hide();

        $('.bordernone').click(function() {
            $('.left-word').toggle();
        });

    });  

</script>